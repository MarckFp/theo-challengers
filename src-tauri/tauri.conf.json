{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Theo Challengers",
  "version": "../package.json",
  "identifier": "com.marckfp.theo-challengers",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Theo Challengers",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzNkFFMDY3NEQxMERGODcKUldTSDN4Qk5aK0JxNHphUm1temZmWG9LazNHdno5RHVVTzVhSGo5cmxnbmZ3UVNKVnNqdThpY00K",
      "endpoints": [
        "https://github.com/MarckFp/theo-challengers/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
